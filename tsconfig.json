{
  "compilerOptions": {
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "esModuleInterop": true,
    "isolatedModules": true,
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "ESNext",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "skipLibCheck": true,
    "strictNullChecks": false,
    "noImplicitAny": false,
    "strictBindCallApply": false,
    "forceConsistentCasingInFileNames": false,
    "noFallthroughCasesInSwitch": false,
    "resolveJsonModule": true,
    "paths": {
      "@apis/*": ["src/services/apis/*"],
      "@application/*": ["src/application/*"],
      "@config/*": ["config/*"],
      "@database/*": ["database/*"],
      "@decorators/*": ["src/shared/decorators/*"],
      "@domain/*": ["src/domain/*"],
      "@enums/*": ["src/shared/enums/*"],
      "@filters/*": ["src/shared/filters/*"],
      "@guards/*": ["src/shared/guards/*"],
      "@infrastructure/*": ["src/infrastructure/*"],
      "@interceptors/*": ["src/shared/interceptors/*"],
      "@middlewares/*": ["src/shared/middlewares/*"],
      "@modules/*": ["src/modules/*"],
      "@pipes/*": ["src/shared/pipes/*"],
      "@services/*": ["src/services/*"],
      "@src/*": ["src/*"],
      "@test/*": ["test/*"],
      "@transformers/*": ["src/shared/transformers/*"],
      "@utils/*": ["src/shared/utils/*"],
      "@validators/*": ["src/shared/validators/*"]
    }
  }
}
